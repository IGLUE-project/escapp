{
  "name": "web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start_heroku": "heroku local:start",
    "start_production": "sudo NODE_ENV=production node ./bin/www",
    "start_production_forever": "forever start -c 'npm run start_production' ./",
    "dev": "DEBUG=escapp  nodemon bin/www -e sass,js,json --exec \"npm run css && npm run lint && node\" && xdg-open http://localhost:3000 ",
    "dev-windows": "nodemon bin/www -e sass,scss,js,json --exec \"npm run css && npm run lint && node\" && start http://localhost:3000",
    "test": "jest",
    "migrate_local": "sequelize db:migrate --url $(grep DATABASE_URL  .env | cut -d '=' -f2)",
    "migrate_local_sqlite": "sequelize db:migrate --url sqlite://$(pwd)/escaperoom.sqlite",
    "migrate_heroku": "heroku run ./node_modules/.bin/sequelize db:migrate --url $DATABASE_URL",
    "seed_local": "sequelize db:seed:all --url $(grep DATABASE_URL  .env | cut -d '=' -f2)",
    "seed_local_sqlite": "sequelize db:seed:all --url sqlite://$(pwd)/escaperoom.sqlite",
    "seed_heroku": "heroku run ./node_modules/.bin/sequelize db:seed:all --url $DATABASE_URL",
    "reset_heroku": "heroku pg:reset DATABASE",
    "reset_local_sqlite": "rm -rf escaperoom.sqlite",
    "open_heroku": "heroku open",
    "css": "node-sass public/stylesheets/style.sass public/stylesheets/style.css",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix",
    "dump_heroku": "heroku pg:backups:download -o escape-room-upm.dump --app escape-room-upm"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.14.0",
    "connect-session-sequelize": "^6.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "ejs": "^2.6.1",
    "eslint": "^5.16.0",
    "express": "^4.16.4",
    "express-flash": "^0.0.2",
    "express-partials": "^0.3.0",
    "express-session": "^1.16.1",
    "forever-monitor": "^1.7.1",
    "fs": "^0.0.1-security",
    "global": "^4.3.2",
    "http-errors": "~1.6.2",
    "i18n-express": "^1.1.3",
    "json-2-csv": "^3.5.2",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "multer": "^1.3.0",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.11.0",
    "node-sass-middleware": "0.11.0",
    "nodemailer": "^6.3.1",
    "nodemon": "^1.18.11",
    "pg": "7.10.0",
    "sass": "^1.19.0",
    "sequelize": "5.8.2",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "jest": "^24.7.1",
    "sqlite3": "^4.0.6"
  },
  "engines": {
    "node": "10"
  }
}