<%- include ("../partials/_header.ejs") %>
<div role="main" class="main">
    <div class="breadcrumbs-container">
        <div class="breadcrumbs">
			<a href="/escapeRooms"><%=i18n.common.my%></a>
				<span class="material-icons">chevron_right</span>
					<a href="/escapeRooms/<%=escapeRoom.id%>">
						 <%=escapeRoom.title%>
					</a>
                    <span class="material-icons">chevron_right</span>
					<span>Report</span>
					
        </div>
	</div>
    <h1>Report content</h1>
    <form class="participantList" method="POST" >
        
            <p>Reportar la escape room por contenido inadecuado</p>
            <div style="display:flex;flex-direction:column;align-items:baseline">
                <label for="reason" style = "color:white;">Motivo</label>
                <select style="width:100%;margin:1vw 0;text-align: left;padding:0.5em; color:white  !important; border-color: white;" id="reason" name="reason" >
                    <option value="r1"> Motivo 1</option>
                    <option value="r2"> Motivo 2</option>
                    <option value="r3"> Motivo 3</option>
                    <option value="r4"> Motivo 4</option>
                    <option value="r5"> Motivo 5</option>
                    <option value="r6"> Motivo 6</option>
                </select>
                <label for="comments" style = "color:white;">Comentarios adicionales</label>
                <textarea class="textarea" style="width:100%;height:20vh;min-height:100px;margin:1vw 0;text-align: left; padding: 0.5em; font-family: 'Lato' !important; border-color: white;"  id="comments" name="comments" ></textarea>
                <input class="rounded editButton" type="submit" value="Enviar">
            </div>
    </form>
</div>
<%- include ("../partials/_footer.ejs") %>
