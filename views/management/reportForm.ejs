<%- include ("../partials/_header.ejs") %>
<div role="main" class="main">
    <h2>Report content</h2>
    <form method="POST">
        <div >
            <p>Reportar la escape room por contenido inadecuado</p>
            <div style="display:flex;flex-direction:column;align-items:baseline">
                <label for="reason">Motivo</label>
                <select style="width:80vw;margin:1vw 0" id="reason" name="reason" >
                <%console.log(i18n)%>
                <% Object.entries(i18n.reports).forEach((entry) => { %>
                    <% const [key, value] = entry;%>
                    <option value="<%=key%>"><%=value%></option>
                <% })%>
                </select>
                <label for="comments">Comentarios adicionales</label>
                <input style="width:80vw;height:20vh;margin:1vw 0" type="text" id="comments" name="comments" >
                <input style="margin-top:3vh" type="submit" value="Enviar">
            </div>
        </div>
    </form>
</div>
