<!-- Theme included stylesheets -->
 <%- include ("../../partials/_header.ejs") %>
<div role="main" class="main steps step-instructions">
    <dialog id="catalog"></dialog>
	<%- include ("../../partials/_breadcrumbStep") %>
  <h1><%=i18n.escapeRoom.steps[endPoint].title%></h1>
    <p class="intro-paragraph">
      <%=i18n.escapeRoom.steps[endPoint].explanation%>
    </p>

    <%- include ("../../partials/_resource_catalog", {theme, endPoint, escapeRoom}) %>
    </div>
    <br/>
    <form style="width:100%" method='POST' id="instructionsForm" class="basicConfig" action='/escapeRooms/<%= escapeRoom.id %>/<%=endPoint%>'  <%if (endPoint === "indications" && escapeRoom.format === "hybrid"){%> enctype="multipart/form-data"  <%}%> >
        
      <input type="hidden" id="appearance" name="appearance" value="<%=theme%>" />
      <div id="custom-content">
      </div>
      <%if (endPoint === "indications" && escapeRoom.format === "hybrid"){%>
      <div class="inputFormField erFormField" style="padding-left: 0px;">
        <label for="hybrid"  class="itemNarrow"><%=i18n.escapeRoom.steps.indications.hybridInstructions%></label>
        <p class="explanation" style="padding-left: 0px;"><%=i18n.escapeRoom.steps.indications.hybridInstructionsNote%></p>
        <input class="attach" type="file" id="hybrid" name="hybrid"/>
        <label for="hybrid" style="margin-left: 0px;padding-left: 0px;" class="fileUpload customInput itemWide">
          <span id="imgLabel" class="fileTitle">
            <% if (escapeRoom.id && escapeRoom.hybridInstructions) { %>
              <%=escapeRoom.hybridInstructions || "Default" %>
            <% } else { %>
              <%=i18n.escapeRoom.steps.edit.noFileUploaded%>
            <% } %>
          </span>
          <span id="upload"
            <% if (escapeRoom.hybridInstructions) { %>
              style="display: none;"
            <% } %>
            class="fileUploadButton">
              <span class="material-icons">file_upload</span>
          </span>
          <span id="delete"
            <% if (!escapeRoom.hybridInstructions) { %>
              style="display: none;"
            <% } %>
            class="fileUploadButton">
              <span class="material-icons">delete</span>
            </span>
            <input type="text" class="inputFormField erFormField" style="opacity:0;" aria-label="Force focus"/>
            <input type="hidden" name="keepHybridInstructions" id="keepHybridInstructions" value="<%= (escapeRoom.hybridInstructions) ? "1" : "0" %>" >
        </label>
      </div>
      <%}%>
    <br/>
      <div class="align-right flex-buttons buttons_before_progressbar">
          <button class="progress-buttons" type="submit" value="<%=progress%>" id="progress-save" name="progress"><%=i18n.common.save%></button>
          <button class="progress-buttons" type="submit" value="next" id="next" name="next"><%=i18n.common.next%></button>
          <button class="progress-buttons" type="submit" value="previous" id="previous" name="previous"><%=i18n.common.previous%></button>
