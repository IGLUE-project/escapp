<html>
<head>
    <title><%=escapeRoom.title%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="/js/vendor/easy-alert.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>
    <script src="/js/vendor/socket.io.js"></script>
    <script src="/js/play.js"></script>
    <link rel="stylesheet" href="/stylesheets/vendor/quill.snow.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/vendor/bootswatch/<%=escapeRoom[endPoint + "Appearance"] || "litera" %>.bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/play.css">
    <link rel="stylesheet" href="/stylesheets/vendor/animate.css">
    <link rel="stylesheet" href="/stylesheets/vendor/easy-alert.css">
    <% include ../../partials/_icons.ejs %>
</head>
<body>
<nav class="navbar navbar-light" style="padding: 0px 1em;">
    <a class="backToMain"  href="/escapeRooms/<%=escapeRoom.id%>">&larr;</a>
    <span class="erTitle"><%=escapeRoom.title%></span>
    <%if (isStudent && escapeRoom.teamSize > 1) {%>
        <span class="teamName"><b><%=i18n.team.Team%>: </b><%=team.name%></span>
    <%}%>
</nav>  
<div class="previewContainer">
    <div class="container-fluid">
        <div class=" row-centered">
            <div class="col-xs-12 text-left ql-editor instructionsShow" id="editor">
                <% if (escapeRoom[endPoint + "Instructions"]) {%>
                    <%-escapeRoom[endPoint + "Instructions"] %>
                <% } %>
            </div>
        </div>
        <% if (endPoint === "team" && escapeRoom.hintApp) {%>
            <div class="row-centered">
                <div class="col-xs-12">
                    <div >
                        <h4><%=i18n.hint.Hints%></h4>
                        <ul id="hintList" >
                        <% for (var hint of hints) {
                            if (hint) {%>
                            <li>
                                <div class="card border-info mb-3">
                                    <div class="card-body">
                                        <div class="card-text"><%=hint.hint ? hint.hint.content : i18n.hint.empty%></div>
                                    </div>
                                </div>
                            </li>
                            <% }
                        } %>
                        </ul>
                        <br/>
                        <button id="btn-hints" class="btn btn-primary"><%=i18n.hint.need%></button>
                    </div>
                </div>
            </div>
        <% } %>
        <br/><br/>
        <% 
        var finish = false;
        if (isStudent) { 
            var retosSuperados = team.retos.map(a=>a.id);
            var progress = Math.round(retosSuperados.length / escapeRoom.puzzles.length * 100);
            finish = retosSuperados.length === escapeRoom.puzzles.length;
            %>
            <script>
                var retosSuperados = <%=JSON.stringify(retosSuperados)%>;
                var totalPuzzles = <%= escapeRoom.puzzles.length %>;
                var puzzlesPassed = <%= retosSuperados.length %>;
                var progress = <%= !isNaN(progress) ? progress : undefined %>;
            </script>
            <div class="dialog" >
                <div class="dialog-content" id="finishPuzzles">
                    <% if (finish) {   %>
                        <h4 id="puzzles"><%=i18n.puzzle.finish%></h4>
                        <br/>
                        <a href="/escapeRooms/<%= escapeRoom.id %>/finish">
                            <button class="btn btn-success">
                                <%=i18n.common.finish%>
                            </button>
                        </a>
                    <%} else { %>
                        <% include ../../partials/_puzzleInterface.ejs %>
                    <%}%>
                </div>
            </div>

        <% } %>

        <div class=" row-centered">
            <div class="col-xs-12">
            <% include ../../partials/_countdown.ejs %>
            <% include ../../partials/_ranking %>
            </div>
        </div>
    </div>
</div>
<% var puzzles = escapeRoom.puzzles.map(({ id, title, score, automatic })=>({ id, title, score, automatic })) %>
<script>
    var escapeRoomId = "<%= escapeRoom.id%>";
    var nPuzzles = "<%= escapeRoom.puzzles.length%>";
    var escapeRoomHintLimit = <%= (escapeRoom.hintLimit === undefined || escapeRoom.hintLimit === null ) ? "undefined" : escapeRoom.hintLimit %>;

    var escapeRoomPuzzles = JSON.parse('<%-JSON.stringify(puzzles)%>');
    initSocketServer(<%= escapeRoom.id%>, <%= team.id || "undefined" %>, <%= team.turno ? team.turno.id : "undefined" %>)
    var i18n = {

        empty: "<%=  i18n.hint.empty %>", 
        correctAnswer: "<%=i18n.puzzle.correctAnswer%>",
        check: "<%=i18n.puzzle.check%>",
        wrongAnswer: "<%=i18n.puzzle.wrongAnswer%>",
        dontClose:  "<%= i18n.hint.dontClose %>", 
        failed: "<%= i18n.hint.failed %>",
        instructionsHints: "<%= i18n.hint.instructionsHints %>",
        finishMsg: "<%=i18n.puzzle.finish%>",
        finishButton: "<%=i18n.common.finish%>",
        tooMany: "<%=i18n.hint.tooMany%>",
        writeSol: "<%=i18n.puzzle.writeSol%>"
    };


</script>
<%- include("../../partials/_flash",{bs:true}) %>

</body>
</html>
