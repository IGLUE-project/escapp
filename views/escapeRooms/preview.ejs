<%- include ("../partials/_header.ejs") %>

<div role="main" class="main showStudent">
	<div class="breadcrumbs-container">
        <div class="breadcrumbs">
			<a href="/escapeRooms"><%=i18n.common.my%></a>
				<span class="material-icons">chevron_right</span>
                <span><%=escapeRoom.title%></span>
        </div>
	</div>
    <div class="flex ">
		
		<div class="flex-thumb attachmentShow animated">
			<% var attachment = escapeRoom.attachment; %>
			<%- include ("../attachments/_show",{attachment}) %>
            <div class="button-share">
                <%if(!user.isStudent){%>
                    <button class="rounded editButton" title="<%=i18n.escapeRoom.clone%>" onclick="overlayTrigger('clone-<%=escapeRoom.id%>')">
                        <%=i18n.showTeacher.actionList.clone%>
                    </button>
                    <div class="overlay-trigger" data-id="clone-<%=escapeRoom.id%>">
                        <form method="POST" action='/escapeRooms/<%= escapeRoom.id %>/clone?_method=PUT' >
                            <p><%=i18n.participant.areYouSureClone%></p>
                            <button class="deleteButton" type="button" onclick="overlayTrigger('clone-<%=escapeRoom.id%>', true)"><%=i18n.common.cancel%></button>
                            <button class="acceptButton" type="submit"><%=i18n.common.accept%></button>
                        </form>
                    </div>
                <%}%>
                
                <a href="/escapeRooms/<%=escapeRoom.id%>/join"><button class="rounded editButton acceptButton">join</button></a>
            </div>
		</div>
		<div class="flex-er-info animated fadeIn">
			<h1><%=escapeRoom.title%></h1>
			<p>by <%=user.name%></p>
            <br/>
            <h3>Description</h3>
            <p><%=escapeRoom.description%></p>
            <div class="flex-er-info-preview fadeIn">
                <%if(escapeRoom.field){%><div><h3>Field</h3><p><%=i18n.escapeRoom.isced[escapeRoom.field]%></p></div><%}%>
                <%if(escapeRoom.license){%><div><h3>License</h3><p><%=escapeRoom.license%></p></div><%}%>
                <%if(escapeRoom.subject){%><div><h3>Topic</h3><p><%=escapeRoom.subject%></p></div><%}%>
                <%if(escapeRoom.duration){%><div><h3>Duration</h3><p><%=escapeRoom.duration%></p></div><%}%>
                <%if(escapeRoom.format){%><div><h3>Format</h3><p><%=escapeRoom.format%></p></div><%}%>
                <%if(escapeRoom.forceLang){%><div><h3>Language</h3><p><%=escapeRoom.forceLang%></p></div><%}%>
                <%if(escapeRoom.level){%><div><h3>Level</h3><p><%=i18n.user.eduLevel[escapeRoom.level]%></p></div><%}%>
                <!--<%if(!user.isStudent){%><div><h3>Associated materials</h3><p><%=escapeRoom.duration%></p></div><%}%>-->
            </div>
        </div>
        
    </div>
   <br/>
   <br/>
   <br/>
   <br/>
</div>
<%- include ("../partials/_footer.ejs") %>
<script>
    const overlayTrigger = (id, close) => {
	$('.overlay-trigger').hide();
	if (!close) {
		$('.overlay-trigger[data-id="' + id + '"]').show();
	}
};
</script>