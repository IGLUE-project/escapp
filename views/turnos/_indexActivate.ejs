    var selectedDates = [
    <% for (var d = 0; d < turnos.length; d++) { %>
        new Date("<%= turnos[d].date%>") <%if (d !== turnos.length -1) {%>,<% }%>
    <% } %>
    ].map(d=>{d.setHours(0,0,0,0); return d.getTime()}); 
    
</script>
    

